<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk04"
    tools:context=".royalseason">

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#673AB7"
        android:rotation="180"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_media_play" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="64dp"
        android:layout_height="67dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:fontFamily="serif"
        android:text="ROYALS"
        android:textColor="#0C0909"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="120dp"
        android:backgroundTint="#F8570765"
        android:text="All"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="120dp"
        android:backgroundTint="#F8570765"
        android:text="Recent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginTop="120dp"
        android:backgroundTint="#F8570765"
        android:text="Popular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="310dp"
        android:layout_marginTop="120dp"
        android:backgroundTint="#F8570765"
        android:text="Season"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="400dp"
        android:layout_height="535dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="181dp"
                android:layout_height="200dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="320dp"
                app:cardBackgroundColor="#966fd6"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/card_background_image1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:scaleType="centerCrop"
                    android:src="@drawable/christmas" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-light"
                android:text="Christmas Cake"
                android:textColor="#100C0D"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="55dp"
                android:text="Price:3500.00"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="140dp"
                android:backgroundTint="#9C27B0"
                android:text="Buy now"
                android:textColor="#F5F0F6" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="95dp"
                android:backgroundTint="#9C27B0"
                android:text="Add cart" />


            <androidx.cardview.widget.CardView
                android:layout_width="181dp"
                android:layout_height="200dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginStart="16dp"
                android:layout_marginTop="220dp"
                android:layout_marginBottom="320dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/card_background_image2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:scaleType="centerCrop"
                    android:src="@drawable/red" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="250dp"
                android:fontFamily="sans-serif-light"
                android:text="Red Velvet"
                android:textColor="#100C0D"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="275dp"
                android:text="Price:6488.00"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="315dp"
                android:backgroundTint="#9C27B0"
                android:text="Buy now"
                android:textColor="#F5F0F6" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="360dp"
                android:backgroundTint="#9C27B0"
                android:text="Add cart" />



        </GridLayout>

    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:layout_marginTop="770dp"
        android:backgroundTint="#4E74E6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="67dp"
            android:layout_height="63dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="#4E74E6"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/home01" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="67dp"
            android:layout_height="63dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="2dp"
            android:backgroundTint="#4E74E6"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/cart01" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="67dp"
            android:layout_height="63dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="2dp"
            android:backgroundTint="#4E74E6"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/noti01" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="67dp"
            android:layout_height="63dp"
            android:layout_marginStart="320dp"
            android:layout_marginTop="2dp"
            android:backgroundTint="#4E74E6"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/pro" />


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>