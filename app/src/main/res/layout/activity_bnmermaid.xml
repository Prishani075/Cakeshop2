<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk04"
    tools:context=".bnmermaid">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="64dp"
        android:layout_height="67dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#673AB7"
        android:rotation="180"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_media_play" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/roundedImageView"
        android:layout_width="326dp"
        android:layout_height="235dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/mermaid01"
        app:layout_constraintBottom_toTopOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.595"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.183"
        app:shapeAppearanceOverlay="@style/RoundedCorners" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="420dp"
        android:layout_height="464dp"
        android:layout_marginTop="376dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            app:cardBackgroundColor="#6617F1"
            app:cardCornerRadius="25dp"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="389dp">

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="58dp"
                android:layout_height="55dp"
                android:background="#6617F1"
                android:scaleType="fitXY"
                app:tint="#ffffffff"
                app:srcCompat="@drawable/plus" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="58dp"
                android:layout_height="55dp"
                android:layout_marginStart="100dp"
                android:background="#6617F1"
                app:tint="#ffffffff"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/minus" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:text="01"
                android:textAlignment="center"
                android:textColor="#F4F4F4"
                android:textSize="34sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            android:fontFamily="serif"
            android:text="Mermaid Cake"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:layout_marginTop="90dp"
            android:fontFamily="serif"
            android:text="Rs.2,900"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="234dp"
            android:layout_height="70dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="120dp"
            app:srcCompat="@drawable/fourstar" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="180dp"
            android:fontFamily="sans-serif-black"
            android:text="Details"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="220dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Here is one beautiful structured mermaid cake for your child! It gives a funny note because of its pinky and blue shade icing."
            android:textSize="20sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="415dp"
            android:layout_height="67dp"
            android:layout_marginTop="380dp"
            app:cardBackgroundColor="#7632A6">

            <ImageButton
                android:id="@+id/imageButton15"
                android:layout_width="81dp"
                android:layout_height="51dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="5dp"
                android:background="#7632A6"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/heart01" />

            <Button
                android:id="@+id/button25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#ffffffff"
                android:fontFamily="sans-serif"
                android:text="Buy now"
                android:textAlignment="center"
                android:textColor="#7632A6"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>